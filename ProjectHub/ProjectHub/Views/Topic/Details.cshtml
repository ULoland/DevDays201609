@model ProjectHub.Models.Dto.TopicDetailDto

@{
    ViewBag.Title = "Topic details";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Description</h3>
        </div>
        <div class="panel-body">
            <p>@Model.Description</p>
            <div class="row">
                <div class="col-md-6">
                    <strong>Pros</strong>
                    <ul>
                        <li>Item 1</li>
                        <li>Item 2</li>
                        <li>Item 3</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <strong>Cons</strong>
                    <ul>
                        <li>Item 1</li>
                        <li>Item 2</li>
                        <li>Item 3</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="list-group">
        @foreach (var post in Model.Posts)
        {
            @Html.DisplayFor(x => post)
        }
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
